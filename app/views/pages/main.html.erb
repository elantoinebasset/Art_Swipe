<div class="main-container d-flex align-items-center justify-content-center vh-100">
  <div class="content text-center">
    <h1 class="mb-4">Welcome to the Art Gallery</h1>
    <p class="mb-5">Explore the world of art by choosing an option below:</p>

    <div class="d-flex gap-4 justify-content-center">
      <%= link_to "Browse Artists", artists_path, class: "btn btn-lg btn-primary px-5 py-3 shadow-lg" %>
      <%= link_to "Browse Artworks", artworks_path, class: "btn btn-lg btn-secondary px-5 py-3 shadow-lg" %>
    </div>
  </div>
</div>

<!-- CSS Styling -->
<style>
  .main-container {
    background: linear-gradient(135deg, #f0f0f0, #d9d9d9);
  }

  .content {
    background: white;
    padding: 40px;
    border-radius: 15px;
    box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.2);
  }

  .btn-lg {
    font-size: 1.2rem;
    font-weight: bold;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .btn-lg:hover {
    transform: translateY(-3px);
    box-shadow: 0px 12px 24px rgba(0, 0, 0, 0.25);
  }
</style>
