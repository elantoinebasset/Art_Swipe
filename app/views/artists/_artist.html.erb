<div class="container_Principale">
  <div class="container-fluid">
    <div id="<%= dom_id artist %>" class="artist-container">

      <div class="artist-photo">

    
      <%= image_tag artist.picture %>
      </div>
    
    
      <div class="artist-info">
        <div class="artist-centre">
        <h4> <strong>First name:</strong> </h4>
    
        <%= artist.first_name %>
        </div>



        <div class="artist-centre">
        <h4> <strong>Last name:</strong> </h4>
    
        <%= artist.last_name %>
        </div>



        <div class="artist-centre">
        <h4> <strong>Date of birth:</strong> </h4>
    
        <%= artist.date_of_birth %>
        </div>


        <div class="artist-centre">
        <h4> <strong>artworks:</strong> </h4>
    
        <%= artist.artworks.map(&:title).join(", ") %>

        </div>
      </div>

    </div>
  </div>
</div>