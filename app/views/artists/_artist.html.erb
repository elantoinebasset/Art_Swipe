<div id="<%= dom_id artist %>" style="text-align: center; margin: 100px;">
  <p>
    <div style="color: green;">
    <h1><strong>Picture:</strong> </h1>
    </div>
    <%= image_tag artist.picture, width: "250", style: "display: block; margin: auto;" %>
  </p>

  <p>
    <div style="color: green;">
    <h3> <strong>First name:</strong> </h3>
    </div>
    <%= artist.first_name %>
  </p>

  <p>
    <div style="color: green;">
    <h3> <strong>Last name:</strong> </h3>
    </div>
    <%= artist.last_name %>
  </p>

  <p>
    <div style="color: green;">
    <h3> <strong>Date of birth:</strong> </h3>
    </div>
    <%= artist.date_of_birth %>
  </p>
</div>
